# =============================================================================
# Legacy Configuration (maintained for backward compatibility)
# =============================================================================

# Database Configuration (used by CLI and API)
POSTGRES_USER=algobet
POSTGRES_PASSWORD=password
POSTGRES_DB=football
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database URL (can be used instead of individual parameters)
DATABASE_URL=postgresql://algobet:password@localhost:5432/football

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_ENV=development  # development | production
CORS_ORIGINS=http://localhost:3000,https://algobet.example.com
LOG_LEVEL=info  # debug | info | warning | error | critical

