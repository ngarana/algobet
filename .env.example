# =============================================================================
# New Configuration System (Phase 1 Implementation)
# These settings use the new Pydantic Settings system
# =============================================================================

# Application Settings
ALGOBET_APP_NAME=AlgoBet
ALGOBET_APP_VERSION=0.1.0

# Database Configuration
ALGOBET_DATABASE__URL=postgresql://algobet:password@localhost:5432/football
ALGOBET_DATABASE__POOL_SIZE=10
ALGOBET_DATABASE__MAX_OVERFLOW=20
ALGOBET_DATABASE__ECHO=false

# Model Management
ALGOBET_MODELS__PATH=data/models
# ALGOBET_MODELS__DEFAULT_VERSION=

# Web Scraping
ALGOBET_SCRAPING__DEFAULT_URL=https://www.oddsportal.com/matches/football/
ALGOBET_SCRAPING__TIMEOUT=120
ALGOBET_SCRAPING__HEADLESS=true
ALGOBET_SCRAPING__MAX_RETRIES=3
ALGOBET_SCRAPING__RETRY_DELAY=5

# Backtesting
ALGOBET_BACKTEST__DEFAULT_MIN_MATCHES=100
ALGOBET_BACKTEST__DEFAULT_VALIDATION_SPLIT=0.2
ALGOBET_BACKTEST__MAX_HISTORY_DAYS=365

# Logging Configuration
ALGOBET_LOGGING__LEVEL=INFO
ALGOBET_LOGGING__FORMAT=text
ALGOBET_LOGGING__OUTPUT=stdout
# ALGOBET_LOGGING__FILE_PATH=logs/algobet.log
ALGOBET_LOGGING__SHOW_TIMESTAMP=true
ALGOBET_LOGGING__SHOW_LEVEL=true

# CLI Settings
ALGOBET_CLI__DEBUG=false
ALGOBET_CLI__VERBOSE=false
ALGOBET_CLI__COLOR=true

